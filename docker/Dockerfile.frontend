FROM node:20-alpine

WORKDIR /app

# Copy package files first
COPY frontend/package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application
COPY frontend/ .

# Add this to allow connections from outside the container
ENV VITE_HOST=0.0.0.0

EXPOSE 5173

CMD ["npm", "run", "dev", "--", "--host"] 